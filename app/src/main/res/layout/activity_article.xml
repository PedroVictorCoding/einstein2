    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:ignore="AdapterViewChildren">


        <LinearLayout
            android:onClick="ShowPopupWhatIsPhilosophy"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/course_info_box"
            android:backgroundTint="@android:color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="What is Philosophy?"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
            <TextView
                android:text="In this article I will try to give you a quick explanation on what philosophy is for me"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="end|bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="HardcodedText" />

             <com.robertlevonyan.views.chip.Chip
                android:id="@+id/chipPhilo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                app:mcv_backgroundColor="@color/dPurple"
                app:mcv_textColor="@android:color/white"
                app:mcv_chipText="@string/philosophy" />


        </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />
</LinearLayout>

    </android.support.v4.widget.NestedScrollView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="75dp"
        android:background="@color/SeriousBlue"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:contentDescription="@string/TODO"
            android:src="@mipmap/ic_launcher"
            android:text="@string/einsteinOwl"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="ButtonStyle" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="bottom"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:contentDescription="@string/TODO"
                android:background="@color/SeriousBlue"
                android:src="@drawable/ic_import_contacts_black_24dp"
                android:text="@string/Articles"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="ButtonStyle" />
        </FrameLayout>

        <ImageButton
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:contentDescription="@string/TODO"
            android:background="@color/lightRedOchre"
            android:src="@drawable/ic_play_arrow_black_24dp"
            android:text="@string/knowledge_vids"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="ButtonStyle" />

        <ImageButton
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:contentDescription="@string/TODO"
            android:background="@color/hansaYellow"
            android:src="@drawable/ic_subject_black_24dp"
            android:text="@string/vocabulary"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="ButtonStyle" />

    </LinearLayout>


</FrameLayout>
