<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hansaYellow"
    tools:context=".articleView">

    <com.lorentzos.flingswipe.SwipeFlingAdapterView
        android:id="@+id/articles"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rotation_degrees="16"
        app:max_visible="2"
        app:min_adapter_stack="0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="75dp"
        android:background="@color/SeriousBlue"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:contentDescription="@string/TODO"
            android:src="@mipmap/ic_launcher"
            android:text="@string/einsteinOwl"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="ButtonStyle" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="bottom"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:contentDescription="@string/TODO"
                android:background="@color/SeriousBlue"
                android:src="@drawable/ic_import_contacts_black_24dp"
                android:text="@string/Articles"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="ButtonStyle" />
        </FrameLayout>

        <ImageButton
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:contentDescription="@string/TODO"
            android:background="@color/lightRedOchre"
            android:src="@drawable/ic_play_arrow_black_24dp"
            android:text="@string/knowledge_vids"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="ButtonStyle" />

        <ImageButton
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:contentDescription="@string/TODO"
            android:background="@color/hansaYellow"
            android:src="@drawable/ic_subject_black_24dp"
            android:text="@string/vocabulary"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_marginStart="15dp"
    android:background="@drawable/course_info_box"
    android:layout_marginTop="20dp"
    android:layout_width="wrap_content"
    android:layout_height="50dp">
  <!--  <ImageButton android:id="@+id/close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/ic_arrow_back_black_24dp"
        android:contentDescription="@string/TODO" /> -->

    <TextView
        android:id="@+id/countWords"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

</LinearLayout>





</FrameLayout>
