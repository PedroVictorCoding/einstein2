<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".InProgress">

    <TextView
        android:text="@string/in_progress"
        android:textSize="50sp"
        android:textColor="@android:color/white"
        android:textAllCaps="true"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@drawable/course_info_box"
        android:backgroundTint="@color/colorChipBackground"
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="2dp"
        tools:ignore="ContentDescription" />

    <LinearLayout android:onClick="physicsVote"
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/coursebutton"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@android:color/white"
        android:orientation="horizontal"
        tools:ignore="OnClick">



        <TextView
            android:layout_weight="9"
            android:text="@string/physics_intro"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/PhysicsVotes"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="end"
            android:layout_width="0dp"
            android:layout_marginEnd="15dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:onClick="historyVote"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/coursebutton"
        android:backgroundTint="@android:color/white"
        android:orientation="horizontal"
        tools:ignore="OnClick">

        <TextView
            android:layout_weight="9"
            android:text="@string/history_intro"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/HistoryVotes"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="end"
            android:layout_width="0dp"
            android:layout_marginEnd="15dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>