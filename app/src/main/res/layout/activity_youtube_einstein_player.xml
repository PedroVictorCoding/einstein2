<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YoutubeEinsteinPlayer">

    <FrameLayout
        android:background="@color/lightRedOchre"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <view
                android:layout_gravity="center"
                android:id="@+id/youtubePlay"
                class="com.google.android.youtube.player.YouTubePlayerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="75dp"
        android:background="@color/SeriousBlue"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@mipmap/ic_launcher"
            android:contentDescription="@string/TODO"
            android:src="@mipmap/ic_launcher"
            android:text="@string/einsteinOwl"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="ButtonStyle" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="bottom"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:contentDescription="@string/TODO"
                android:background="@color/SeriousBlue"
                android:src="@drawable/ic_import_contacts_black_24dp"
                android:text="@string/Articles"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="ButtonStyle" />
        </FrameLayout>

        <ImageButton
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:contentDescription="@string/TODO"
            android:background="@color/lightRedOchre"
            android:src="@drawable/ic_play_arrow_black_24dp"
            android:text="@string/knowledge_vids"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="ButtonStyle" />

        <ImageButton
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:contentDescription="@string/TODO"
            android:background="@color/hansaYellow"
            android:src="@drawable/ic_subject_black_24dp"
            android:text="@string/vocabulary"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

</FrameLayout>
